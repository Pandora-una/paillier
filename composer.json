{
    "name": "pandora-una/paillier",
    "description": "Cript e Decript do Paillier.",
    "keywords": ["criptografia", "paillier"],
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Ginzel",
            "email": "fabio.ginzel@pandora.com.br"
        }
    ],
    "type": "project",
    "require": {
		"php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "squizlabs/php_codesniffer": "^3.5",
        "php-mock/php-mock-phpunit": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "PandoraUna\\Paillier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PandoraUnaTest\\Paillier\\": "test/"
        }
    },
    "scripts": {
		"cs-check" : [
			"./vendor/bin/phpcs -q",
			"./vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run"
		],
		"cs-fix" : [
			"./vendor/bin/phpcbf",
			"./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],		
        "phpunit-test": [
            "./vendor/bin/phpunit"
        ],
        "phpunit-ci": [
            "phpunit --testdox",
            "phpunit --coverage-clover build/logs/clover.xml"
        ],        
		"test": [
			"@cs-check",
			"@phpunit-test"
        ],
        "test-ci": [
			"@cs-check",
			"@phpunit-ci"
        ]
    }
}
